%header.items-new-header
  %h1
    = link_to "root_path", class: "items-new-header__icon" do
      = image_tag "mercari_logo.svg", alt: "mercari"

%main.items-new-main
  %section.items-new-single-container
    #sell-container
      %div
        .sell-container-inner
          %h2.items-new-single-head 商品の情報を入力

          = form_with url: '', local: true, class: "items-new-sell-form" do |f|

            .items-new-upload-box
              %h3.items-new-upload-box__head
                出品画像
                %span.items-new-upload-box__head__require 必須
              %p.items-new-upload-box__text 最大10枚までアップロードできます
              .items-new-imagebox.clearfix
                .items-new-imagebox__container
                  .items-new-imagebox__container__items
                    %ul
                %label(class="sell-upload-drop-box" for="a-image")
                  = f.file_field :image, class: "sell-upload-drop-file", id: "a-image"
                  %pre.visible
                    ドラッグアンドドロップ
                    またはクリックしてファイルをアップロード

            .items-new-sell-content
              .form-group
                %h3.items-new-text-mini
                  商品名
                  %span.items-new-text-mini__red 必須
                %div
                  = f.text_field :text, id: "input-default",  placeholder: "商品名（必須 40文字まで)"
              .form-group2
                %h3.items-new-text-mini
                  商品の説明
                  %span.items-new-text-mini__red 必須
                = f.text_area :text2, class: "textarea-default", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。", rows: "5"

            .items-new-sell-content.clearfix
              %h3.sell-sub-head 商品の詳細
              .sell-form-box
                .form-group
                  %h3.items-new-text-mini
                    カテゴリー
                    %span.items-new-text-mini__red 必須
                  .select-wrap
                    %i.fa.fa-chevron-down
                    = f.select :category, [["---", ""], ["レディース", 1], ["メンズ", 2], ["ベビー・キッズ", 3], ["インテリア・住まい・小物", 4], ["本・音楽・ゲーム", 5], ["おもちゃ・ホビー・グッズ", 6], ["コスメ・香水・美容", 7], ["家電・スマホ・カメラ", 8], ["スポーツ・レジャー", 9], ["ハンドメイド", 10], ["チケット", 11], ["自動車・オートバイ", 12], ["その他", 13]]
                .form-group-wrapper
                  .form-group
                    %h3.items-new-text-mini
                      商品の状態
                      %span.items-new-text-mini__red 必須
                    .select-wrap
                      %i.fa.fa-chevron-down
                      = f.select :category, [["---", ""], ["新品、未使用", 1], ["未使用に近い", 2], ["目立った傷や汚れなし", 3], ["やや傷や汚れあり", 4], ["傷や汚れあり", 5], ["全体的に状態が悪い", 6]]

            .items-new-sell-content.clearfix
              %h3.sell-sub-head 配送について
              = link_to "" do
                .i.fa.fa-question-circle.items-new-question
              .sell-form-box
                .form-group
                  %h3.items-new-text-mini
                    配送料の負担
                    %span.items-new-text-mini__red 必須
                  .select-wrap
                    %i.fa.fa-chevron-down
                    = f.select :category, [["---", ""], ["送料込み(出品者負担)", 2], ["着払い(購入者負担)", 1]]
                .form-group-wrapper
                  .form-group
                    %h3.items-new-text-mini
                      発送元の地域
                      %span.items-new-text-mini__red 必須
                    .select-wrap
                      %i.fa.fa-chevron-down
                      = f.select :category, [["---", ""], ["北海道", 1], ["青森県", 2], ["岩手県", 3], ["宮城県", 4], ["秋田県", 5], ["山形県", 6], ["福島県", 7], ["茨城県", 8], ["栃木県", 9], ["群馬県", 10], ["埼玉県", 11], ["千葉県", 12], ["東京都", 13], ["神奈川県", 14], ["新潟県", 15], ["富山県", 16], ["石川県", 17], ["福井県", 18], ["山梨県", 19], ["長野県", 20], ["岐阜県", 21], ["静岡県", 22], ["愛知県", 23], ["三重県", 24], ["大阪府", 25], ["兵庫県", 26] ,["京都府", 27], ["滋賀県", 28], ["和歌山県", 29], ["鳥取県", 30], ["島根県", 31], ["岡山県", 32], ["広島県", 33], ["山口県", 34], ["徳島県", 35], ["香川県", 36],["愛媛県", 37], ["高知県", 38], ["福岡県", 39], ["佐賀県", 40], ["長崎県", 41], ["熊本県", 42], ["大分県", 43], ["宮崎県", 44], ["鹿児島県", 45], ["沖縄県", 46], ["奈良県", 47], ["未定", 99]]
                .form-group-wrapper
                  .form-group
                    %h3.items-new-text-mini
                      発送までの日数
                      %span.items-new-text-mini__red 必須
                    .select-wrap
                      %i.fa.fa-chevron-down
                      = f.select :category, [["---", ""], ["1~2日で発送", 1], ["2~3日で発送", 2], ["4~7日で発送", 3]]

            .items-new-sell-content.clearfix
              %h3.sell-sub-head 販売価格(300〜9,999,999)
              = link_to "" do
                .i.fa.fa-question-circle.items-new-question
              .sell-form-box
                %ul.sell-price
                  %li.form-group.clearfix
                    %h3.text-mini-left
                      価格
                      %span.text-mini-left__red 必須
                    .sell-price-input
                      ¥
                      .sell-price-input__wrapper
                        = f.text_field :price, class: "input-default", placeholder: "例）300", value: ""
                  %li.clearfix.fee
                    .fee__left
                      販売手数料 (10%)
                    .fee__right -
                  %li.clearfix.profit
                    .profit__left 販売利益
                    .profit__right -
            .modal{role: "dialog", tabindex: "-1"}
              .modal-inner

            .items-new-sell-content.sell-btn-box
              %div
                %p
                  = link_to "", class: "items-new-notes" do
                    %span<>禁止されている出品
                  %span<>、
                  = link_to "", class: "items-new-notes" do
                    %span<>行為
                  を必ずご確認ください。
                %p
                  %span<>またブランド品でシリアルナンバー等がある場合はご記載ください。
                  = link_to "", class: "items-new-notes" do
                    %span<>偽ブランドの販売
                  は犯罪であり処罰される可能性があります。
                %p
                  %span<>また、出品をもちまして
                  = link_to "", class: "items-new-notes" do
                    %span<>加盟店規約
                  に同意したことになります。
              = f.submit "出品する", class: "items-new-btn-red"
              = link_to "", class: "items-new-btn-gray" do
                もどる

